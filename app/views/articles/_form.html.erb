<%= form_for(@article) do |f| %>
  <%= render partial: 'shared/errors', locals: { model: @article, model_name: 'article'} %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label' %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, class: 'control-label' %><br>
    <%= f.cktext_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, 'Tags', class: 'control-label' %><br>
    <%= f.text_field :tag_list, value: @article.tag_list.to_s, class: "form-control", id: "article_tags" %>
  </div>

  <div class="form-group">
    <%= f.label :author, class: 'control-label' %><br>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :posting_date, class: 'control-label' %><br>
    <%= f.datetime_select :posting_date, class: "datepicker" %>
  </div>

  <div class="actions">
    <%= f.submit nil,  {class: 'btn btn-default'} %>
  </div>
<% end %>
