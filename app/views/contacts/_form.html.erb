<%= form_for(@contact, html: { multipart: true }) do |f| %>
  <%= render partial: 'shared/errors', locals: { model: @contact, model_name: 'Contact'} %>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :first_name, 'First Name', class: 'control-label' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :last_name, 'Last Name', class: 'control-label' %><br>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :maiden_name, 'Maiden Name', class: 'control-label' %><br>
        <%= f.text_field :maiden_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :address_line1, 'Address Line 1', class: 'control-label' %><br>
        <%= f.text_field :address_line1, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :address_line2, 'Address Line 2', class: 'control-label' %><br>
        <%= f.text_field :address_line2, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :city, class: 'control-label' %><br>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :state_id, class: 'control-label' %><br>
        <%= f.collection_select :state_id, State.order(abbreviation: :asc), :id, :abbreviation, { prompt: 'Choose a State', include_blank: true }, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :zip, class: 'control-label' %><br>
        <%= f.text_field :zip, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :phone_number, class: 'control-label' %><br>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :email, class: 'control-label' %><br>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :graduated, class: 'control-label' %><br>
        <%= f.select :graduated, Time.now.year.downto(1872).map {|i| [i,i] }, { prompt: 'Choose a Year', include_blank: true }, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :major, class: 'control-label' %><br>
        <%= f.text_field :major, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :instrument_id, class: 'control-label' %><br>
        <%= f.collection_select :instrument_id, Instrument.order(name: :asc), :id, :name, { prompt: 'Choose an Instrument', include_blank: true }, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: 'control-label' %><br>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit nil,  {class: 'btn btn-default'} %>
  </div>
<% end %>
