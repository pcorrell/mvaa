<p id="notice"><%= notice %></p>

<h1>Board of Directors</h1><br/>

<% @officers.each do |officer| %>
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag officer.avatar.url(:small) %>
    </div>
    <div class="col-sm-9">
      <p>
        <strong>Name:</strong>
        <%= link_to officer.name, "mailto:#{officer.email}" %>
      </p>

      <p>
        <strong>Position:</strong>
        <%= officer.bod_position %>
      </p>

      <p>
        <strong>Instrument:</strong>
        <%= officer.instrument %>
      </p>

      <p>
        <strong>Major:</strong>
        <%= officer.major %>
      </p>

      <p>
        <strong>Graduated:</strong>
        <%= officer.graduated %>
      </p>

      <%= get_html(officer.bio) %>
    </div>
  </div>
  <hr/>
<% end %>

<br>
