<div class="footer">
  <div class="row">
    <div class="col-sm-4 text-left">
      Contact
    </div>
    <div class="col-sm-4 text-center">
      <a href="#"><i class="fa fa-facebook-official social-icon facebook"></i></a>
      <a href="#"><i class="fa fa-twitter social-icon twitter"></i></a>
      <a href="#"><i class="fa fa-linkedin social-icon linked-in"></i></a>
    </div>
    <div class="col-sm-4 text-right">
      <% if Link.count > 0 %>
        <ul>Links
          <% Link.all.each do |link| %>
            <li><%= link_to link.title, link.url %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
